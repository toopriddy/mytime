extern int debugging;

#define DEBUG(a) if(debugging) { a }
#define VERBOSE(a) if(debugging > 1) { a }
#define VERY_VERBOSE(a) if(debugging > 2) { a }

#define ARRAY_SIZE(a) (sizeof(a)/sizeof(a[0]))

